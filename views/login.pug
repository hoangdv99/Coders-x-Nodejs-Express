extends ../layouts/header
block content
    h1 Login
    if error
        .alert.alert-danger= error
    form(action="/login", method="post")
        .form-group
            label(for="") Email
            input.form-control(name="email", type="text", value= values ? values.email : "")
        .form-group
            label Password
            input.form-control(name="password", type="password")
        button.btn.btn-primary Login
        p New to Coders-X Books? 
            a(href="users/create") Create a new account