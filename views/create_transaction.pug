extends ../layouts/header
block content

    form(action="/transactions/create", method="post")
        .form-row.align-items-center
            .col-auto.my-1
            label.mr-sm-2(for='inlineFormCustomSelect') Books
            select#inlineFormCustomSelect.custom-select.mr-sm-2(name="bookTitle")
                each book in books
                    option= book.title
            button.btn.btn-primary(type='submit') Create