extends ../layouts/header
block content
  if errors
    each error in errors
      .alert.alert-danger= error
  form(action="/users", method="post")
    .form-group
      label Username
      input.form-control(name="username", type="text")
    button.btn.btn-primary Create
  ul
    each user in users
      li= user.username
        a(href="/users/"+user.id+"/edit") &nbsp Edit &nbsp
        a(href="/users/"+user.id+"/delete") Delete
