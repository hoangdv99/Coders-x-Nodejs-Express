extends ../layouts/header
block content
  a(href="/users/create", class="btn btn-primary btn-lg active", role="button", aria-pressed="true") Create new user
  table.table
    thead.thead-dark
      tr
        th ID
        th Username
        th Email
        th
        th
    tbody
      each user in users
        tr
          td= user.id
          td= user.username
          td= user.email
          td
            a(href="/users/"+user.id+"/edit") Edit
          td
            if user.isAdmin !== true
              a(href="/users/"+user.id+"/delete") Delete
        
        
