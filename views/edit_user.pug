extends ../layouts/header
block content
    form(action="/users/"+id+"/profile", method="post", enctype="multipart/form-data")
        .form-group
            Label Edit username
            input.form-control(name="username", type="text")
        .form-group
            Label Edit email
            input.form-control(name="email", type="text")
        .form-group
            Label Edit Password
            input.form-control(name="password", type="password")
        .form-group
            Label Confirm password
            input.form-control(name="confirmPassword", type="password")
        .form-group
            Label Edit avatar
            input.form-control-file(name="avatar", type="file")
        button.btn.btn-primary Summit