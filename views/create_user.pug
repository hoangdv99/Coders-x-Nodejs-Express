extends ../layouts/header
block content
    h1 Create new account
    if errors
    each error in errors
      .alert.alert-danger= error
    form(action="/users/create", method="post")
        .form-group
            label Username
            input.form-control(name="username", type="text", value= values? values.username : "")
            label Email
            input.form-control(name="email", type="text",  value= values? values.email : "")
            label Password
            input.form-control(name="password", type="password")
            label Confirm Password
            input.form-control(name="confirmPassword", type="password")
        button.btn.btn-primary Create